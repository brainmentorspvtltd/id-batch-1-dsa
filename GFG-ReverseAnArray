class Solution {
    public void reverseArray(int arr[]) {
        // code here
        helper(arr, 0, arr.length-1);
        
    }
    void helper(int arr[], int start, int end){
        while(start<=end){
        int temp = arr[start];
        arr[start] = arr[end];
        arr[end] = temp;
        start++;
        end--;
        }
    }
}
